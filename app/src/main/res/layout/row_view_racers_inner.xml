            android:layout_height="wrap_content"
            android:text="s"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:layout_marginRight="35dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:textSize="14sp"
